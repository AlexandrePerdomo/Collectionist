<div class="field nested-fields d-flex align-items-center">
  <%= f.input :day, collection: ((1..7).map { |i| [t("days.#{i}"), i] }) %>
  <%= f.input :opens, as: :time, minute_step: 5 %>
  <%= f.input :closes, as: :time, minute_step:  5 %>
  <%= link_to_remove_association t('.remove_open_hours'), f %>
</div>
