<p id="notice"><%= notice %></p>

<h1><%= t '.shops' %></h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="1"><%= t('name') %></th>
      <th colspan="3"><%= t('.actions') %></th>

    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= link_to t('actions.show'), shop %></td>
        <td><%= link_to t('actions.edit'), edit_shop_path(shop) %></td>
        <td><%= link_to t('actions.destroy'), shop, method: :delete, data: { confirm: t('actions.sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_shop_path %>
